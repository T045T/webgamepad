[xboxdrv]
evdev-grab=true
silent = true
quiet = true
dpad-as-button = true
mimic-xpad = true

# map the virtual keyboard created by the i2DX server to Xbox controller buttons
[evdev-keymap]
BTN_5 = a
BTN_6 = b
BTN_7 = x
BTN_8 = y
BTN_TL = lb
BTN_TR = rb
BTN_START = start
BTN_SELECT = select
BTN_0 = du
BTN_1 = dd
BTN_2 = dl
BTN_3 = dr
BTN_4 = guide
